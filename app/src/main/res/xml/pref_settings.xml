<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:key="adventure"
        android:title="@string/pref_title_adventure"
        android:entries="@array/pref_adventure_titles"
        android:entryValues="@array/pref_adventure_values"
        android:defaultValue="tutorial"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="difficulty"
        android:title="@string/pref_title_difficulty"
        android:entries="@array/pref_difficulty_titles"
        android:entryValues="@array/pref_difficulty_values"
        android:defaultValue="0"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <CheckBoxPreference
        android:key="music"
        android:title="@string/pref_title_music"
        android:defaultValue="true" />

    <CheckBoxPreference
        android:key="sfx"
        android:title="@string/pref_title_sfx"
        android:defaultValue="true" />

</PreferenceScreen>
