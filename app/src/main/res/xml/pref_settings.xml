<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="url"
        android:title="@string/pref_title_url"
        android:defaultValue="@string/pref_default_url"
        android:selectAllOnFocus="true"
        android:inputType="textWebEmailAddress"
        android:singleLine="true"
        android:maxLines="1" />

    <ListPreference
        android:key="difficulty"
        android:title="@string/pref_title_difficulty"
        android:entries="@array/pref_difficulty_titles"
        android:entryValues="@array/pref_difficulty_values"
        android:defaultValue="0"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
