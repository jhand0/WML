<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#292930"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Where&apos;s my Limbs?"
        android:id="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#ffffffff"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        android:shadowColor="#ff000000"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/btnPlay"
        style="@android:style/MediaButton.Play"
        android:background="#ff636275"
        android:typeface="serif"
        android:textColor="#ffd5d5d5"
        android:textSize="20dp"
        android:width="180dp"
        android:layout_above="@+id/btnRefresh"
        android:layout_alignLeft="@+id/btnRefresh"
        android:layout_alignStart="@+id/btnRefresh"
        android:layout_marginBottom="20dp" />

    <Button
        style="@android:style/MediaButton.Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SETTINGS"
        android:id="@+id/btnSettings"
        android:background="#ff636275"
        android:typeface="serif"
        android:textColor="#ffd5d5d5"
        android:textSize="20dp"
        android:width="180dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <Button
        style="@android:style/MediaButton.Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REFRESH MAP"
        android:id="@+id/btnRefresh"
        android:background="#ff636275"
        android:typeface="serif"
        android:textColor="#ffd5d5d5"
        android:textSize="20dp"
        android:width="180dp"
        android:layout_above="@+id/btnSettings"
        android:layout_alignLeft="@+id/btnSettings"
        android:layout_alignStart="@+id/btnSettings"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
