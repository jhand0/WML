<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#292930"
    tools:context="edu.washington.jhand1.wheresmylimbs.ActivityIntro">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Where&apos;s my Limbs?"
        android:id="@+id/txtMapTitle"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#ffffffff"
        android:textSize="50dp"
        android:gravity="center_horizontal"
        android:shadowColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Welcome welcome welcome welcome welcome "
        android:id="@+id/txtIntro"
        android:typeface="serif"
        android:textStyle="italic"
        android:textSize="30dp"
        android:gravity="center_horizontal"
        android:textColor="#ff636275"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <Button
        style="@android:style/MediaButton.Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTINUE"
        android:id="@+id/btnContinue"
        android:background="#ff636275"
        android:typeface="serif"
        android:textColor="#ffd5d5d5"
        android:textSize="20dp"
        android:width="180dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
