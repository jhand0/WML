<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.washington.jhand1.wheresmylimbs.FragmentRoom"
    android:background="#292930"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Room Title"
        android:id="@+id/txtRoomTitle"
        android:textStyle="bold|italic"
        android:typeface="serif"
        android:textColor="#ffffffff"
        android:textSize="40dp"
        android:gravity="center_horizontal"
        android:shadowColor="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/border"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Room description description description description description  description description description description"
            android:id="@+id/txtRoomDescription"
            android:textColor="#ffd5d5d5"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:typeface="serif"
            android:layout_margin="9dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Room event event event event event event event event event event event event event event event"
            android:id="@+id/txtRoomUpdate"
            android:textColor="#ffd5d5d5"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:typeface="serif"
            android:layout_margin="9dp" />
    </LinearLayout>

</LinearLayout>
