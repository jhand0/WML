<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#292930"
    tools:context="edu.washington.jhand1.wheresmylimbs.ActivityEnd"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOU WIN"
        android:id="@+id/txtWinLose"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="50dp"
        android:typeface="serif"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Congratulations! You beat &quot;Where&apos;s My Limbs&quot;! "
        android:id="@+id/txtMessage"
        android:layout_below="@+id/txtWinLose"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:textColor="#ffd5d5d5"

        android:typeface="serif"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=":)"
        android:id="@+id/txtImage"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtMessage"
        android:layout_alignEnd="@+id/txtMessage"
        android:layout_marginBottom="121dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="150dp"
        android:textColor="#fffeffff"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp" />

    <Button
        style="@android:style/MediaButton.Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTART"
        android:id="@+id/btnRestart"
        android:textColor="#ffd5d5d5"
        android:background="#ff636275"
        android:textSize="20dp"
        android:padding="6dp"
        android:typeface="serif"
        android:layout_alignTop="@+id/btnMenu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        style="@android:style/MediaButton.Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:id="@+id/btnMenu"
        android:textColor="#ffd5d5d5"
        android:background="#ff636275"
        android:textSize="20dp"
        android:typeface="serif"
        android:padding="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtImage"
        android:layout_alignEnd="@+id/txtImage"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
