<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#292930"
    tools:context="edu.washington.jhand1.wheresmylimbs.ActivityEnd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="YOU WIN"
        android:id="@+id/txtWinLose"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff"
        android:textSize="50dp"
        android:typeface="serif"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Congratulations! You beat &quot;Where&apos;s My Limbs&quot;! "
        android:id="@+id/txtMessage"
        android:layout_below="@+id/txtWinLose"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"
        android:textColor="#ff636275"

        android:typeface="serif"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textStyle="italic" />

    <Button
        style="@android:style/MediaButton.Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESTART"
        android:id="@+id/btnRestart"
        android:textColor="#ffd5d5d5"
        android:background="#ff636275"
        android:textSize="20dp"
        android:padding="6dp"
        android:typeface="serif"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/txtMessage"
        android:layout_alignEnd="@+id/txtMessage" />

    <Button
        style="@android:style/MediaButton.Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENU"
        android:id="@+id/btnMenu"
        android:textColor="#ffd5d5d5"
        android:background="#ff636275"
        android:textSize="20dp"
        android:typeface="serif"
        android:padding="6dp"
        android:layout_alignTop="@+id/btnRestart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <FrameLayout
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:id="@+id/frameLayout2"
        android:adjustViewBounds="true"
        android:padding="3dp"
        android:layout_above="@+id/btnRestart"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="--*"
            android:id="@+id/txtIcon2"
            android:textColor="#ffffff"
            android:typeface="serif"
            android:textSize="50dp"
            android:layout_gravity="right|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="*--"
            android:id="@+id/txtIcon1"
            android:textColor="#ffffff"
            android:typeface="serif"
            android:textSize="50dp"
            android:layout_above="@+id/textView9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView5"
            android:textColor="#ffffff"
            android:text="()"
            android:typeface="serif"
            android:textSize="50dp"
            android:layout_alignTop="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textView7"
            android:textColor="#ffffff"
            android:text="o"
            android:typeface="serif"
            android:textSize="50dp"
            android:layout_alignTop="@+id/textView4"
            android:layout_toRightOf="@+id/textView4"
            android:layout_toEndOf="@+id/textView4"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtIcon4"
            android:textColor="#ffffff"
            android:text=" \\_"
            android:typeface="serif"
            android:textSize="50dp"
            android:layout_below="@+id/frameLayout"
            android:layout_toRightOf="@+id/textView9"
            android:layout_toEndOf="@+id/textView9"
            android:layout_gravity="right|bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtIcon3"
            android:textColor="#ffffff"
            android:text="_/"
            android:typeface="serif"
            android:textSize="50dp"
            android:layout_below="@+id/frameLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="left|bottom" />
    </FrameLayout>

</RelativeLayout>
